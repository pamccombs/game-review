<% if @user.errors %>
  <% @user.errors.full_messages.each do |att| %>
      <%= att %><br>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
    <%= f.label :username %></br>
    <%= f.text_field :username, :placeholder => (@user.errors.full_messages_for(:username).first || "Enter a User name") %></br>
    <%= f.label :email %><br>
    <%= f.text_field :email %><br>
    <%= f.label :admin, "Check box if you are a site admin" %><br>
    <%= f.check_box :admin %><br>
    <%= f.label :password %></br>
    <%= f.password_field :password %></br>
    <%= f.submit %>
<% end %>
